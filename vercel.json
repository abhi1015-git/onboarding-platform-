{
    "version": 2,
    "name": "lokachakra-onboarding",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "VITE_SOLANA_NETWORK": "testnet",
        "VITE_SOLANA_RPC_URL": "https://api.testnet.solana.com"
    }
}